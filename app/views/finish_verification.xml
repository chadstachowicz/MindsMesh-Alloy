<Alloy>
	<Window id="veriWindow" class="container" top="99%">
		
		
       <View layout="vertical" id="mainView" class="mainView" backgroundColor="#ee7533">
       	<ImageView id="image" class="imageView" top="8%" width="80dp" height="80dp" image="/images/MindsMesh-NewLogo.png"/>  
       		<Label class="lblTitle">Once you have verified the link which arrives in your email.  Please click the Confirmed button below.</Label>
			<Button onClick="checkConfirm" class="loginBtn" backgroundColor='#f99965' top="5dp" bottom="17dp"><Label color="white">Confirmed</Label><ActivityIndicator right="5%" id="activityIndicator"/></Button>
			<Button onClick="sendEmail" class="loginBtn" backgroundColor='#f99965' top="5dp" bottom="17dp"><Label color="white">Send Email Again</Label><ActivityIndicator right="5%" id="activityIndicator2"/></Button>
        </View>
        <Button onClick="closeWindow" class="buttoncls" bottom="5%"><Label class="lblcls" color="white">Back to Login</Label></Button>
	</Window>
</Alloy>