			<Window title="basic">
			<!--
				"itemclick" will handle all click events on any ListItems
				in the ListView. You can use the "sectionIndex" and 
				"itemIndex" of the event object to determine exactly
				which ListItem is clicked. This allows you to define a
				single event handler to process all ListItem clicks.

				Bear in mind that event handlers can NOT be added 
				directly to ListItems.
			-->
			
			
			<ListView id="list">
	            <Templates>
	
	                <ItemTemplate  id="template1" name="template1"  class="template1" onClick="onItemClick">
	                	
						<ImageView id="pic"  bindId="pic" class="imageThumb"/>	
						<Label id="textLabel" layout="vertical" bindId="textLabel" class="title"/>
						<Label id="nameLabel" bindId="nameLabel" class="name"/>  
						<ImageView id="attachmentImage"  bindId="attachmentImage" class="attachment"/>
						<Label id="idLabel"  bindId="idLabel" class="id"/> 
	
	                </ItemTemplate>
	            </Templates>
	
	            <ListSection id="section">
	                <ListItem template="template1" />
	            </ListSection>
	        </ListView>

