<Alloy>

    
    
    <TableViewRow id="row">

		<View layout="vertical" top="20" class="rowView">
		<!-- main comment block-->

			<View layout="horizontal" class="rowHeaderView">
				<!-- header block-->
				<ImageView id="thumbImage" class="thumbImage"></ImageView>
		
		
				<View layout="vertical" class="rowView">
					<Label id="nameLabel" class="nameLabel"></Label>
					<Label id="dateLabel"  class="dateLabel"></Label>
				</View>
		
			</View>


			<Label id="textLabel" class="textLabel"></Label>
			<Label id="extLabel" class="textLabel"></Label>
			<ImageView id="postAttachmentImage" visible="false"></ImageView>
			<View layout="horizontal" id="rowFooterView">
				<ImageView image="/images/paperclip_black_24.png" id="paperClipImage" visible="false" left="5"></ImageView>
				<ImageView id="extAttachmentImage" left="5" visible="false"></ImageView>
				<Label id="commentCountLabel" class="commentCountLabel"></Label>
				<ImageView image="/images/comment_32.png" id="commentImage"></ImageView>
			</View>
		</View>

	</TableViewRow>
</Alloy>


             