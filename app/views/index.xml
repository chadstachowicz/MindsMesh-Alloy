<Alloy>
	<Window id="indexWindow" class="container">
		
		
       <View layout="vertical" id="mainView" class="mainView" backgroundColor="#15B17A">  
       	<ImageView id="image" class="imageView" top="18%" width="80dp" height="80dp" image="/images/MindsMesh-NewLogo.png"/>
       	<Label class="lblTitle">MindsMesh</Label>
       	<View layout="vertical" id="loginView" class="loginView" backgroundColor="white">
       		<TextField class="txtLog" id="email" color="#000000" top="5dp" bottom="5dp" left="10dp" width="250dp" height="30dp" hintText="Email Address"/>
       		<View class="txtLog" height="1dp" width='300dp' backgroundColor="#E5E4E2"></View>
       		<TextField class="txtPass" id="password" color="#000000" top="5dp" bottom="5dp" left="10dp" width="250dp" height="30dp" hintText="Password" />
       		</View>
       		
			<Button onClick="goLogin" class="loginBtn" backgroundColor='#15c58a' top="5dp" bottom="17dp"><Label color="white">Login</Label><ActivityIndicator right="5%" id="activityIndicator"/></Button>
			<Label color="white">or</Label>
			<Button onClick="goFacebookLogin" class="loginBtn" backgroundColor='#3b5998' top="17dp" ><Label color="white">Login using Facebook</Label></Button>
			

        </View>
        
        

		<Button onClick="goSignup" class="buttoncls" bottom="5%"><Label class="lblcls" color="white">Sign Up For MindsMesh</Label></Button>		
	</Window>
</Alloy>